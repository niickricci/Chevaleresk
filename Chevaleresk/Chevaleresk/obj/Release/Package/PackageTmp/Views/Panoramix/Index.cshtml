    @section Scripts{
        <script>
        function choisirPotion(id) {
        $("button[id^='potion']").css('border-width', '0px');

        $('#potion' + id).css('border-width', '3px');

        $.ajax({
            url: '@Url.Action("GetPotionInfo", "Panoramix")',
            type: 'GET',
            data: {
                potionId: id,
            },
            success: function(data) {
                $("#dataPotion").html(data);
            },
            error: function() {
            }
        });
    };
        </script>
    }


